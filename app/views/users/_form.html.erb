<div class="container">
<%= form_with model: user do |form| %>
  <div class="row g-3 align-items-center mb-3">
    <div class="col-12 col-sm-4 col-md-4 col-lg-2 d-flex justify-content-start">
      <%= form.label :name, class: 'col-form-label col-form-label-md' %>
    </div>
    <div class="col-12 col-sm-8 col-md-6 col-lg-6">
      <%= form.text_field :name, class: 'form-control form-control-md' %>
    </div>
  </div>
  <div class="row g-3 align-items-center mb-3">
    <div class="col-12 col-sm-4 col-md-4 col-lg-2 d-flex justify-content-start">
      <%= form.label :email, class: 'col-form-label col-form-label-md' %>
    </div>
    <div class="col-12 col-sm-8 col-md-6 col-lg-6">
      <%= form.email_field :email, class: 'form-control form-control-md' %>
    </div>
  </div>
  <div class="row g-3 align-items-center mb-3">
    <div class="col-12 col-sm-4 col-md-4 col-lg-2 d-flex justify-content-start">
      <%= form.label :role_id, class: 'col-form-label col-form-label-md' %>
    </div>
    <div class="col-12 col-sm-8 col-md-6 col-lg-6">
      <%= form.select :role_id, User.get_role, {class: "form-select form-select-lg js-example-matcher"}%>
    </div>
  </div>
  <div class="row g-3 align-items-center mb-3">
    <div class="col-12 col-sm-4 col-md-4 col-lg-2 d-flex justify-content-start">
      <%= form.label :password, class: 'col-form-label col-form-label-md' %>
    </div>
    <div class="col-12 col-sm-8 col-md-6 col-lg-6">
      <%= form.password_field :password, class: 'form-control form-control-md' %>
    </div>
  </div>
  <div class="row g-3 align-items-center mb-3">
    <div class="col-12 col-sm-4 col-md-4 col-lg-2 d-flex justify-content-start">
      <%= form.label :password_confirmation, class: 'col-form-label col-form-label-md' %>
    </div>
    <div class="col-12 col-sm-8 col-md-6 col-lg-6">
      <%= form.password_field :password, class: 'form-control form-control-md' %>
    </div>
  </div>
    <div class="row g-3 align-items-center mb-3">
    <div class="col-12 col-sm-4 col-md-4 col-lg-2 d-flex justify-content-start">
      <%= form.label :phone_number, class: 'col-form-label col-form-label-md' %>
    </div>
    <div class="col-12 col-sm-8 col-md-6 col-lg-6">
      <%= form.text_field :phone_num, class: 'form-control form-control-md' %>
    </div>
  </div>
  </div>
  <div class="row d-flex justify-content-center">
   <div class="col-2 ">
        <%= form.submit class: 'btn btn-primary w-100 fa fa-check'%>
      </div>
      <div class="col-2 ">
        <%# link_to 'Back', members_path, class: 'btn btn-secondary w-100'%>
      </div>
  </div>
    
  </div>
<% end %>
