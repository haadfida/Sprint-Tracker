<div class="container">
  <table class="table table-hover border-primary text-center" id="sprint_report_table">
    <thead class="text-light bg-primary">
      <tr>
        <th><%= t('shared.name') %></th>
        <th><%= t('Assigned Issues') %></th>
        <th><%= t('Resolved Issues') %></th>
        <th><%= t('reports.total_estimated_time') %></th>
        <th><%= t('reports.time_spent') %></th>
      </tr>
    </thead>
    <tbody id="reports_datatable_body">
      <% if sprint_report_attributes.nil? %>
      <div class="container text-center">
        <tr id="no-resource"><td colspan="5"><%= render partial: 'shared/no_resource_present', locals: { record: 'reports.sprint_report' } %></td></tr>
      </div>
      <% else %>
        <% sprint_report_attributes.each do |sprint_report| %>
          <%= render partial: "sprint_report_datatable_row", locals: { sprint_report: sprint_report} %>
          <tr>
            <td colspan="5">
              <% total_estimated_time = sprint_report.total_estimated_time %>
              <% total_time_spent = sprint_report.total_time_spent %>
              <% if total_estimated_time.present? and total_time_spent.present? %>
                <% progress = calculate_progress(sprint_report.total_estimated_time, sprint_report.total_time_spent) %>
                <div class="progress w-100">
                  <div class="progress-bar" role="progressbar" style="width: <%= progress %>%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"><%= progress.round(2).to_s + '%' %>
                  </div>
                  <% if total_time_spent > total_estimated_time %>
                  <div class="progress-bar bg-danger" role="progressbar" style="width: <%= get_progress_width(progress) %>%" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100"><%= (100- progress).round(2).to_s + '%' %></div>
                  <% end %>
                </div>
              <% end %>
            </td>
          </tr>
        <% end %>
        <%= js_paginate sprint_report_attributes %>
      <% end %>
    </tbody>
  </table>
</div>