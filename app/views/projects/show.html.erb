<div class="container mt-3">
  <div class="row bm-3 d-flex justify-content-between">
    <div class="col-8">
      <h1><%= @project.name %></h1>
    </div>
    <div class="col-2">
      <%= link_to ' '+t('shared.edit'), edit_project_path(@project), class: "btn btn-primary w-100 fa fa-pencil" %>
    </div>
    <% if can? :destroy, Project %>
      <div class="col-2">
        <%= link_to ' '+t('shared.delete'), project_path(@project),
                method: :delete,
                data: { confirm: t('shared.confirmation') }, class: "btn btn-danger w-100 fa fa-trash" %>
      </div>
    <% end %>
  </div>
</div>
<div class="container">
  <nav class="navbar navtabs sticky-top navbar-dark bg-primary">
    <div class="container-md justify-content-start">
      <%= link_to t('shared.details'), @project, remote: true, class: 'navbar-brand' %>
      <%= link_to t('sprints.label').pluralize(), [@project, :sprints], remote: true, class: 'navbar-brand' %>
    </div>
  </nav>
</div>
<div class="container" id="navbarOption">
  <%= render('show') %>
</div>