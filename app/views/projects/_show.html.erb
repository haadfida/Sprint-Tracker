<div class="container mt-3">
  <div class="row bm-3 d-flex">
    <div class="col-8">
      <h1><%= project.name %></h1>
    </div>
    <div class="col-2 justify-content-end">
      <%= link_to t('shared.edit'), edit_project_path(project), class: "btn btn-primary w-100 bi bi-pencil" %>
    </div>
    <% if can? :delete, Project %>
      <div class="col-2 justify-content-end">
        <%= link_to t('shared.delete'), project_path(project),
                method: :delete,
                data: { confirm: t('shared.confirmation') }, class: "btn btn-danger w-100 bi bi-trash" %>
      </div>
    <% end %>
  </div>
  <hr/>
</div>
<div class="container">
  <div class="row bm-3">
    <div class="col-3 ">
      <p><strong><%=t('projects.creator')%>:</strong></p>
    </div>
    <div class="col-3">
      <p><%= project.owner.name %></p>
    </div>
    <div class="col-3 ">
      <p><strong><%=t('projects.manager')%>:</strong></p>
    </div>
    <div class="col-3">
      <p><%= project.manager.name %></p>
    </div>
  </div>
  <div class="row bm-3">
    <div class="col-3 ">
      <p><strong><%= project_start_date_label %>:</strong></p>
    </div>
    <div class="col-3">
      <p><%= project.start_date %></p>
    </div>
    <div class="col-3 ">
      <p><strong><%= project_end_date_label %>:</strong></p>
    </div>
    <div class="col-3">
      <p><%= project.end_date %></p>
    </div>
  </div>
  <hr/>
</div>