<div class="modal-dialog modal-lg">
  <div class="modal-content">
    <div class="modal-header">
      <div class = "modal-title" >
        <% t('projects.project_label') + t('shared.name') %>
      </div>
    </div>
      <div class="container modal-body">
        <div class="row mb-3 asterick">
          <div class="col-12 col-sm-4 col-md-4 col-lg-3 control-label">
            <%= form.label t('shared.name'), class: 'col-form-label col-form-label-md' %>
          </div>
          <div class="col-12 col-sm-8 col-md-6 col-lg-8">
            <%= form.select :name, projects.map{|project| project.name, project.id} , { required: true }, {class: "js-select-field form-select form-select-lg"}  %>
          </div>
        </div>
        <div class="row d-flex justify-content-center">
          <div class="col-2 ">
            <%= form.submit class: 'btn btn-primary w-100 fa fa-check' %>
          </div>
          <div class="col-2 ">
            <%= link_to t('shared.back'), issues_path, class: 'btn btn-secondary w-100' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>