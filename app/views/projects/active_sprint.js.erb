<% if @active_sprint.nil? %>
  $('#nav-active-sprint').html("<%= escape_javascript (t('projects.active_sprint_absent')) %>")
  $('#nav-active-sprint').append("<%= escape_javascript(link_to t('projects.backlog'), backlog_project_path, data: { remote: true } ,id: "backlog_redirect") %>");
  $('#backlog_redirect').on('click', function(event){
    event.preventDefault();
    $('#nav-backlog-tab').tab('show');
  });
<% else %>
  $('#nav-active-sprint').html("<%= escape_javascript render('active_sprint', sprint: @active_sprint, issues_to_do: @issues_to_do, issues_in_progress: @issues_in_progress, issues_resolved: @issues_resolved )%>")
<% end %>