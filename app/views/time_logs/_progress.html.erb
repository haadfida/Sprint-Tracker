<div class='progress <%=width%>'>
  <div class="progress-bar" role="progressbar" style="width: <%= time_progression_ratio %>%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"><%= time_progression_ratio.round(2).to_s + '%' %></div>
  <% if total_logged_time.to_i > estimated_time.to_i %>
    <div class="progress-bar bg-danger" role="progressbar" style="width: <%= instance.remaining_progression_percentage(time_progression_ratio) %>%" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100"><%= instance.remaining_progression_percentage(time_progression_ratio).round(2).to_s + '%' %></div>
  <% end %>
</div>