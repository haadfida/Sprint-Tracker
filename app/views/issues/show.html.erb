<%= render partial: "issues/show_header", locals: { issue: @issue } %>
<div class="container">
  <ul class="nav nav-tabs bg-gray" id="issue" role="tablist">
    <li class="nav-item" role="presentation">
      <button class="nav-link active" id="home-tab" data-bs-toggle="tab" data-bs-target="#home" type="button" role="tab" aria-controls="home" aria-selected="true"><%= t('issues.issue_label') %></button>
    <li class="nav-item active" role="presentation">
     <%= link_to t('issues.issue_label'), issue_path, remote: true, class: 'nav-link active', id: "nav-issues-tab", data: {bs_toggle: "tab", bs_target: "#nav-issues"}, type: "button", role: 'tab', aria_controls: "nav-issues",aria_selected: true  %>
    </li>
    <li class="nav-item" role="presentation">
      <button class="nav-link" id="history-tab" data-bs-toggle="tab" data-bs-target="#history" type="button" role="tab" aria-controls="history" aria-selected="false"><%= t('issues.history_label') %></button>
    </li>
    <%= link_to t('time_logs.label').pluralize(), [@issue, :time_logs], remote: true, class: 'nav-link', id: "nav-time_logs-tab", data: {bs_toggle: "tab", bs_target: "#nav-time_logs"}, type: "button", role: 'tab', aria_controls: "nav-sprints", aria_selected: false %>
  </ul>
  <div class="tab-content" id="issue_content">
    <div class="tab-pane fade show active" id="nav-issues" role="tabpanel" aria-labelledby="nav-issues-tab">
      <%= render partial: "show", locals: { issue: @issue } %>
    </div>
    <div class="tab-pane fade" id="history" role="tabpanel" aria-labelledby="history-tab"><%= render partial: "history", locals: { issue: @issue } %></div>
    <div class="tab-pane fade" id="nav-time_logs" role="tabpanel" aria-labelledby="nav-time_logs-tab"></div>
  </div>
</div>
