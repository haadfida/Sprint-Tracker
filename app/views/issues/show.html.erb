<div class="container">
  <% if can? :update, @issue %>
    <div class="row bm-2 ">
      <h1 class="col-5 d-flex justify-content-start">Issues</h1>
      <div class="col-2">
        <%= link_to t('shared.edit'), edit_issue_path(@issue), class: "btn btn-primary w-100 fa fa-pencil" %>
      </div>
      <div class="col-2">
        <%= link_to t('shared.delete'), issue_path(@issue),
        method: :delete,
        data: { confirm: t('shared.confirmation') }, class: "btn btn-danger w-100 fa fa-trash" %>
      </div>
    </div>
  <% end %>
<hr/>
</div>
<div class="container">
  <div class="row gx-6">
    <div class="col-12 col-sm-6">
      <div class="row ">
        <div class="col-12 col-sm-5 col-md-5 col-lg-4 pr-3 pr-md-0 fw-bold">
          <%= t('issues.title') %>:
        </div>
        <div class="col-12 col-sm-7 col-md-7 col-lg-8">
          <p><%= @issue.title %></p>
        </div>
      </div>
    </div>
    <div class="col-12 col-sm-6">
      <div class="row ">
        <div class="col-12 col-sm-5 col-md-5 col-lg-4 pr-3 pr-md-0 fw-bold">
           <%= t('issues.status') %>:
        </div>
        <div class="col-12 col-sm-7 col-md-7 col-lg-8">
          <p><%= @issue.status %></p>
        </div>
      </div>
    </div>
    <div class="col-12 col-sm-6">
      <div class="row ">
        <div class="col-12 col-sm-5 col-md-5 col-lg-4 pr-3 pr-md-0 fw-bold">
           <%= t('issues.description') %>:
        </div>
        <div class="col-12 col-sm-7 col-md-7 col-lg-8">
          <p><%= @issue.description %></p>
        </div>
      </div>
    </div>
    <div class="col-12 col-sm-6">
      <div class="row ">
        <div class="col-12 col-sm-5 col-md-5 col-lg-4 pr-3 pr-md-0 fw-bold">
          <%= t('issues.priority') %>:
        </div>
        <div class="col-12 col-sm-7 col-md-7 col-lg-8">
          <p><%= @issue.priority %></p>
        </div>
      </div>
    </div>
    <div class="col-12 col-sm-6">
      <div class="row ">
        <div class="col-12 col-sm-5 col-md-5 col-lg-4 pr-3 pr-md-0 fw-bold">
           <%= t('issues.estimated_start_date') %>:
        </div>
        <div class="col-12 col-sm-7 col-md-7 col-lg-8">
          <p><%= @issue.estimated_start_date %></p>
        </div>
      </div>
    </div>
    <div class="col-12 col-sm-6">
      <div class="row ">
        <div class="col-12 col-sm-5 col-md-5 col-lg-4 pr-3 pr-md-0 fw-bold">
           <%= t('issues.estimated_end_date') %>:
        </div>
        <div class="col-12 col-sm-7 col-md-7 col-lg-8">
          <%= @issue.estimated_end_date %>
        </div>
      </div>
    </div>
  <div class="col-12 col-sm-6">
      <div class="row ">
        <div class="col-12 col-sm-5 col-md-5 col-lg-4 pr-3 pr-md-0 fw-bold">
           <%= t('issues.actual_start_date') %>:
        </div>
        <div class="col-12 col-sm-7 col-md-7 col-lg-8">
          <p><%= @issue.actual_end_date %></p>
        </div>
      </div>
    </div>
    <div class="col-12 col-sm-6">
      <div class="row ">
        <div class="col-12 col-sm-5 col-md-5 col-lg-4 pr-3 pr-md-0 fw-bold">
           <%= t('issues.actual_end_date') %>:
        </div>
        <div class="col-12 col-sm-7 col-md-7 col-lg-8">
          <%= @issue.actual_end_date %>
        </div>
      </div>
    </div>
  </div>
</div>
<hr/>