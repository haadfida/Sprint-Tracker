<div class="container">
  <br/><br/>
  <% issue.audits.includes(:user).drop(1).each do |audit| %>
    <%= link_to audit&.user&.name, user_path(audit&.user&.sequence_num) %> 
    <%= distance_of_time_in_words(audit.created_at, Time.zone.now) %> ago
    <hr class="mt-1"/>
    <ul>
      <% audit[:audited_changes].each do |attribute, value| %>
        <li> 
          <% if %w[creator_id reviewer_id assignee_id project_id].include?(attribute) %>
            <% value[1] = User.find(value[1].to_i).name %>
            <% value[0] = User.find(value[0].to_i).name %>
          <% end %>
          <b><%= attribute.titleize %></b>
          updated from <I><%= value[0].to_s %></I> to <I><%= value[1].to_s %></I>
        </li>
      <% end %>
    </ul>
  <% end %>
  <div class="d-flex justify-content-left lead"><%= t('issues.no_histoires') if issue.audits.size == 1  %></div>
</div>