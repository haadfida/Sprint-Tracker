<div class="container mt-3">
  <div class="row bm-3 d-flex">
    <div class="col-8">
      <h1><%= t('issues.issue_label') %></h1>
    </div>
    <% if can? :update, @issue %>
      <div class="col-2 justify-content-end">
        <%= link_to t('shared.edit'), edit_issue_path(issue), class: "btn btn-primary w-100 fa fa-pencil" %>
      </div>
    <% end %>
    <% if can? :destroy, @issue %>
      <div class="col-2 justify-content-end">
        <%= link_to t('shared.delete'), issue_path(issue),
        method: :delete,
        data: { confirm: t('shared.confirmation') }, class: "btn btn-danger w-100 fa fa-trash" %>
      </div>
    <% end %>
  </div>
<hr/>
</div>
