<div class="container">
  <div id="flash_messages"></div>
  <div id="issue_show">
    <div class="row">
      <div class="d-flex mt-4 mb-4">
        <i class='bx bx-alarm'></i>
        <div class="progress w-100">
          <% total_logged_time = Issue.time_logs_sum(@issue) %>
          <% value = Issue.time_progression(total_logged_time,@issue.estimated_time) %>
          <div class="progress-bar" role="progressbar" style="width: <%= value %>%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"><%= value.round(2).to_s + '%' %></div>
          <% if total_logged_time > @issue.estimated_time %>
            <div class="progress-bar bg-danger" role="progressbar" style="width: <%=100- value %>%" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100"><%= (100- value).round(2).to_s + '%' %></div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="row gx-6">
      <div class="col-12 col-sm-6">
        <div class="row ">
          <div class="col-12 col-sm-5 col-md-5 col-lg-4 pr-3 pr-md-0 fw-bold">
            <%= t('issues.title') %>:
          </div>
          <div class="col-12 col-sm-7 col-md-7 col-lg-8">
            <p><%= issue.title %></p>
          </div>
        </div>
      </div>
      <div class="col-12 col-sm-6">
        <div class="row ">
          <div class="col-12 col-sm-5 col-md-5 col-lg-4 pr-3 pr-md-0 fw-bold">
            <%= t('issues.status') %>:
          </div>
          <div class="col-12 col-sm-7 col-md-7 col-lg-8">
            <p><%= issue.status %></p>
          </div>
        </div>
      </div>
      <div class="col-12 col-sm-6">
        <div class="row ">
          <div class="col-12 col-sm-5 col-md-5 col-lg-4 pr-3 pr-md-0 fw-bold">
            <%= t('issues.description') %>:
          </div>
          <div class="col-12 col-sm-7 col-md-7 col-lg-8">
            <p><%= issue.description %></p>
          </div>
        </div>
      </div>
      <div class="col-12 col-sm-6">
        <div class="row ">
          <div class="col-12 col-sm-5 col-md-5 col-lg-4 pr-3 pr-md-0 fw-bold">
            <%= t('issues.priority') %>:
          </div>
          <div class="col-12 col-sm-7 col-md-7 col-lg-8">
            <p><%= issue.priority %></p>
          </div>
        </div>
      </div>
      <div class="col-12 col-sm-6">
        <div class="row ">
          <div class="col-12 col-sm-5 col-md-5 col-lg-4 pr-3 pr-md-0 fw-bold">
            <%= t('issues.estimated_start_date') %>:
          </div>
          <div class="col-12 col-sm-7 col-md-7 col-lg-8">
            <p><%= issue.estimated_start_date %></p>
          </div>
        </div>
      </div>
      <div class="col-12 col-sm-6">
        <div class="row ">
          <div class="col-12 col-sm-5 col-md-5 col-lg-4 pr-3 pr-md-0 fw-bold">
            <%= t('issues.estimated_end_date') %>:
          </div>
          <div class="col-12 col-sm-7 col-md-7 col-lg-8">
            <p><%= issue.estimated_end_date %></p>
          </div>
        </div>
      </div>
      <div class="col-12 col-sm-6">
        <div class="row ">
          <div class="col-12 col-sm-5 col-md-5 col-lg-4 pr-3 pr-md-0 fw-bold">
            <%= t('issues.actual_start_date') %>:
          </div>
          <div class="col-12 col-sm-7 col-md-7 col-lg-8">
            <p><%= issue.actual_end_date %></p>
          </div>
        </div>
      </div>
      <div class="col-12 col-sm-6">
        <div class="row ">
          <div class="col-12 col-sm-5 col-md-5 col-lg-4 pr-3 pr-md-0 fw-bold">
            <p><%= t('issues.actual_end_date') %>:<p>
          </div>
          <div class="col-12 col-sm-7 col-md-7 col-lg-8">
            <p><%= issue.actual_end_date %></p>
          </div>
        </div>
      </div>
      <div class="col-12 col-sm-6">
        <div class="row ">
          <div class="col-12 col-sm-5 col-md-5 col-lg-4 pr-3 pr-md-0 fw-bold">
            <%= t('issues.reviewer') %>:
          </div>
          <div class="col-12 col-sm-7 col-md-7 col-lg-8">
           <p> <%= issue.reviewer.email %></p>
          </div>
        </div>
      </div>
      <div class="col-12 col-sm-6">
        <div class="row ">
          <div class="col-12 col-sm-5 col-md-5 col-lg-4 pr-3 pr-md-0 fw-bold">
            <%= t('issues.creator') %>:
          </div>
          <div class="col-12 col-sm-7 col-md-7 col-lg-8">
           <p> <%= issue.creator.email %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<hr/>