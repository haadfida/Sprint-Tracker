<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
	<%= render "devise/shared/error_messages", resource: resource, required: true %>

	<div class="field">
		<%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control form-control-user form mb-3", placeholder: t('shared.name'), required: true %>
	</div>

	<div class="field">
		<%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-user form mb-3", placeholder: t('shared.email'), required: true %>
	</div>

	<div class="field">
		<%= f.label :password %>
		<% if @minimum_password_length %>
			<em>(<%= @minimum_password_length %> characters minimum)</em>
		<% end %>
		<br />
		<%= f.password_field :password, autocomplete: "new-password",class: "form-control form-control-user form mb-3", placeholder: t('shared.password'), required: true %>
	</div>

	<div class="field">
		<%= f.password_field :password_confirmation, autocomplete: "new-password",class: "form-control form-control-user form mb-3", placeholder: t('shared.password_confirmation'), required: true %>
	</div>

	<div class="field">
		<%= f.text_field :phone_num, autocomplete: "new-phone num",class: "form-control form-control-user form mb-3", placeholder: t('shared.phone_num') + t('shared.phone_placeholder'), required: true %>
	</div>

	<div class="field">
		<%= f.fields_for :company, Company.new do |ff| %>
			<%= ff.text_field :name, autocomplete: "company",class: "form-control form-control-user form mb-3 js-name-field", placeholder: "Company Name", id: "name", required: true %>
			<%= ff.text_field :subdomain, autocomplete: "company",class: "form-control form-control-user form mb-3", id:"subdomain", ReadOnly: true %>
		<% end %>
	</div>

	<div class="actions">
		<%= f.submit "Register Account", class: "btn btn-primary btn-user btn-block mb-3", required: true %>
	</div>
<% end %>