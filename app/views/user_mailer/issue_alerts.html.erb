<h1>Issue information</h1>

<p>
   "Hi "<%= @name %>, <%= link_to "Issue##{@issue.sequence_num.to_s}", issue_url(@issue, subdomain: @subdomain) %> was changed <I style="color:blue">by <%= @current_user.name %> </I>

  <div class="container">
    <%= distance_of_time_in_words(@changes[:updated_at][1], Time.zone.now) %> ago
    <hr class="mt-1"/>
    <ul>
      updated from 
      <li> 
        <!-- Previous value at index 0 and updated at index 1 -->
        <I><%= @changes[:description][0] %></I> <br> 
      </li>
      <I style="color:red"> to</I>
      <li>
        <I><%= @changes[:description][1] %></I>
      </li>
    </ul>
  </div>
</p>
