<tr id="sprint_<%= sprint.sequence_num %>">
  <td><%= sprint.name %></td>
  <td><%= sprint.creator.email %></td>
  <td><%= sprint.start_date&.to_formatted_s(:long) %></td>
  <td><%= sprint.end_date&.to_formatted_s(:long) %></td>
  <td><%= sprint.estimated_start_date&.to_formatted_s(:long) %></td>
  <td><%= sprint.estimated_end_date&.to_formatted_s(:long) %></td>
  <td>
    <% if can? :read, Sprint %>
      <%= link_to ' ', [project, sprint], remote: true, class:"bi bi-eye" %>
    <% end %>
    <% if can? :edit, Sprint %>
      <%= link_to ' ', [:edit, project, sprint], remote: true, class:"bi bi-pencil" %>
    <% end %>
    <% if can? :destroy, project => Sprint %>
      <%= link_to '', [project, sprint],
                method: :delete, remote: true,
                data: { confirm: t('shared.confirmation') }, class: "bi bi-trash" %>
    <% end %>
  </td>
</tr>