<% if can? :create, Sprint %>
  <div class="container mt-3">
    <div class="row d-flex justify-content-end">
      <div class="col-2">
        <%= link_to t('shared.create_new_resource', resource_label: t('sprints.label')), new_project_sprint_path, remote: true, class:"btn btn-primary w-100 fa fa-plus" %>
      </div>
    </div>
  </div>
<% end %>
<div class="container mt-3">
  <% if sprints.present? %>
    <table class="table table-hover border-primary text-center" id="sprints-datatable">
      <thead class="bg-primary text-light">
        <tr>
          <th><%= t('shared.creator') %></th>
          <th><%= t('shared.start_date') %></th>
          <th><%= t('shared.end_date') %></th>
          <th><%= t('shared.est_start_date') %></th>
          <th><%= t('shared.est_end_date') %></th>
          <th><%= t('shared.actions') %></th>
        </tr>
      </thead>
      <tbody id="sprint_data_table_body">
        <% sprints.each do |sprint| %>
          <%= render 'sprint_datatable_row', sprint: sprint, project: project %>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <div class="container text-center">
      <%= render partial: 'shared/no_resource_present', locals: { record: 'sprints.label' } %>
    </div>
  <% end %>
  <%= will_paginate sprints %>
</div>